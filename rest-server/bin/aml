#!/usr/bin/env bash

. header

command="$1"
shift

case ${command} in

    start) ${AML_HOME}/bin/aml-start $1 $2 $3 ;;

    stop) ${AML_HOME}/bin/aml-stop ;;

    status) ${AML_HOME}/bin/aml-status ;;

    engine) ${AML_HOME}/bin/aml-engine $1 $2 $3 $4 ;;

    train) ${AML_HOME}/bin/aml-train $1 ;;

    *)
        echo -e "${Red}Unknown command: '$COMMAND'. Need use 'start', 'stop', 'engine' or 'train'${Reset}"
        exit 1 ;;
esac