#!/usr/bin/env bash

. header

command="$1"
shift

case ${command} in

    start) ${HARNESS_HOME}/bin/harness-start $1 $2 $3 ;;

    stop) ${HARNESS_HOME}/bin/harness-stop ;;

    status) ${HARNESS_HOME}/bin/harness-status ;;

    engine) ${HARNESS_HOME}/bin/harness-engine $1 $2 $3 $4 ;;

    train) ${HARNESS_HOME}/bin/harness-train $1 ;;

    *)
        echo -e "${Red}Unknown command: '$COMMAND'. Need use 'start', 'stop', 'engine' or 'train'${Reset}"
        exit 1 ;;
esac